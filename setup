#!/usr/bin/env bash

# Remove existing symlinks
rm -rf ~/.bash_prompt
rm -rf ~/.aliases

# Create symlinks in home directory
ln -s $(pwd)/.bash_prompt ~/.bash_prompt
ln -s $(pwd)/.aliases ~/.aliases

# Define the files
BASH_PROMPT_SOURCE="source ~/.bash_prompt"
ALIASES_SOURCE="source ~/.aliases"
BASHRC="$HOME/.bashrc"

# Function to append line to .bashrc if it doesn't already exist
append_if_not_exist() {
  local line="$1"
  local file="$2"
  grep -qF -- "$line" "$file" || echo "$line" >> "$file"
}

# Append source lines if they don't exist
append_if_not_exist "$BASH_PROMPT_SOURCE" "$BASHRC"
append_if_not_exist "$ALIASES_SOURCE" "$BASHRC"

echo "Updated .bashrc successfully."

# Now begins installing the packages

sudo apt install ninja-build gettext cmake unzip curl tmux gh

# Install neovim
git clone https://github.com/neovim/neovim
cd neovim && make CMAKE_BUILD_TYPE=Release
sudo make install

